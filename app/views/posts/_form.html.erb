<%= form_for @post, html: { multipart: true } do |f| %>
  <% if @post.errors.any? %>
     <h2><%= pluralize(@post.errors.count, "error") %> prevented this post from saving:</h2>
     <ul>
     	<% @post.errors.full_messages.each do |m| %>
     	   <li><%= m %></li>
     	<% end %>
     </ul>
  <% end %>

  <%= f.label :title %><br>
  <%= f.text_field :title %>


  <br>
  <br>


  <%= f.label :content, "Write your post here" %><br>
  <%= f.text_area :content %>

  <br>
  <br>

  <%= f.label :image %><br>
	<%= f.file_field :image %>

	<br>
	<br>

  <%= f.submit %>

<% end %>
